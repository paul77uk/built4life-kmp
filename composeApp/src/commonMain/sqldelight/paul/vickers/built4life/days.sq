CREATE TABLE days (
    id INTEGER PRIMARY KEY,
    title TEXT,
    program_id INTEGER,
    FOREIGN KEY(program_id) REFERENCES programs(id) ON DELETE CASCADE
);

getDaysByProgramId:
SELECT id, title, program_id FROM days WHERE program_id = ?;

insert:
INSERT INTO days(title, program_id) VALUES(?, ?);

update:
UPDATE days SET  title = ?, program_id = ? WHERE id = ?;

delete:
DELETE FROM days WHERE id = ?;